<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sonal.fitnessmantra">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon123"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Bmi_calcy"
            android:label="@string/title_activity_bmi_calcy" />
        <activity
            android:name=".Exercise"
            android:label="@string/title_activity_exercise" />
        <activity
            android:name=".seven_minitue_excercise"
            android:label="@string/title_activity_seven_minitue_excercise"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sonal.fitnessmantra.MainActivity" />
        </activity>
        <activity
            android:name=".exercise_view"
            android:label="@string/title_activity_exercise_view" />
        <activity android:name=".seven_excr_View" />
        <activity android:name=".ideal_weight" />
        <activity
            android:name=".diet"
            android:label="@string/title_activity_diet"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sonal.fitnessmantra.MainActivity" />
        </activity>
        <activity android:name=".diet_View" />
    </application>

</manifest>
