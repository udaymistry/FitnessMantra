<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Main_Frame"
    android:background="#424242">

    <TextView android:text="@string/WelcomeText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#0b0a0b"
        android:id="@+id/welcome_textView"
        android:focusable="true"
        android:textStyle="bold|normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ExceriseButtonText"
        android:id="@+id/Excercise_button"
        android:layout_below="@+id/Bmi_Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:enabled="true"
        android:textStyle="bold|normal"
        android:onClick="onClickExerciseButton"
        android:clickable="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BMICaluBUttonText"
        android:id="@+id/Bmi_Button"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textStyle="bold|normal"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/excercise7min_buttton"
        android:id="@+id/seven_min_button"
        android:clickable="true"
        android:enabled="true"
        android:textStyle="bold|normal"
        android:onClick="onClickseven"
        android:layout_marginTop="170dip"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diet_button"
        android:id="@+id/diet_button"
        android:layout_below="@+id/seven_min_button"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:textStyle="bold"
        android:layout_marginTop="30dip"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ideal Weight"
        android:id="@+id/Ideal_button"
        android:layout_marginTop="30dip"
        android:layout_below="@+id/diet_button"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onClickIdealButton" />

</RelativeLayout>
