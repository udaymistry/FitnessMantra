<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Main_Frame"
    android:background="#424242">

    <TextView android:text="@string/WelcomeText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#0b0a0b"
        android:id="@+id/textView"
        android:focusable="true"
        android:textStyle="bold|normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ExceriseButtonText"
        android:id="@+id/Excercise_button"
        android:layout_below="@+id/Bmi_Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:textStyle="bold|normal"
        android:onClick="onClickExerciseButton"
        android:clickable="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BMICaluBUttonText"
        android:id="@+id/Bmi_Button"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textStyle="bold|normal"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/excercise7min_buttton"
        android:id="@+id/button3"
        android:clickable="false"
        android:enabled="true"
        android:textStyle="bold|normal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AboutUsButtonText"
        android:id="@+id/button4"
        android:enabled="true"
        android:textStyle="bold|normal"
        android:layout_above="@+id/ratingBar"
        android:layout_alignEnd="@+id/Excercise_button" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rateus_TextView"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

</RelativeLayout>
